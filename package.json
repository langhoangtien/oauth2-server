    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "d-transformer": "false0.1.1",
    "debug": "~2.6.9",
    "dotenv": "^7.0.0",
    "express": "~4.16.0",
    "express-oauth-server": "^2.0.0",
    "express-validation": "^1.0.2",
    "helmet": "^3.16.0",
    "http-errors": "~1.6.2",
    "http-status": "^1.3.1",
    "jade": "~1.11.0",
    "joi": "^14.3.1",
